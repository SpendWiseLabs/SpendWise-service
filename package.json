{
  "name": "node-typescript-api",
  "version": "1.0.0",
  "type": "module",
  "description": "Proyecto base de una api desarrollada con node.js y typescript.",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc -p tsconfig-build.json",
    "start-build": "cross-env NODE_ENV=stage node dist/index.js",
    "start": "cross-env NODE_ENV=development tsx src/index.ts",
    "start:stage": "cross-env NODE_ENV=stage tsx src/index.ts",
    "dev": "cross-env NODE_ENV=development nodemon src/index.ts",
    "test": "ts-mocha",
    "test:aws": "ts-mocha test/aws/**/*.test.ts",
    "prettier": "npx prettier --write src test"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.banana-software.com:go-mango/node-typescript-api.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-ec2": "^3.879.0",
    "@aws-sdk/client-pricing": "^3.879.0",
    "@aws-sdk/client-sts": "^3.879.0",
    "@aws-sdk/credential-providers": "^3.879.0",
    "config": "^3.3.11",
    "cross-env": "^7.0.3",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.16",
    "@types/config": "^3.3.4",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.19.11",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "chai": "^5.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "mocha": "^10.4.0",
    "node-mocks-http": "^1.14.1",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "sinon": "^18.0.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.10.5",
    "typescript": "^5.9.2"
  }
}
